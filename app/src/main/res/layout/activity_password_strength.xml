<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michaeljohnston.infosecurityapp.PasswordStrengthActivity">

    <EditText

        android:layout_width="383dp"
        android:layout_height="89dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="211dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:hint="Type your password here"
        android:id="@+id/editText"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="8dp" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="371dp"
    android:layout_height="156dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:id="@+id/textViewParent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <TextView
        android:id="@+id/textViewPass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#22313F"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>


    <TextView
        android:layout_width="382dp"
        android:layout_height="152dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="310dp"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.06"
        android:textColor="#22313F"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Enter a sample password to test its strength

REMEMBER:
-Length > Complexity
-Avoid Common Passwords
"
        android:textSize="18dp"
        />
    <Button
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        android:text="Test"
        android:textSize="30dp"
        android:onClick="testPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="33dp"
        app:layout_constraintVertical_bias="0.655"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/button" />




</android.support.constraint.ConstraintLayout>
