<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michaeljohnston.infosecurityapp.PhishingGameActivity">
    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="505dp"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="-76dp">

        <!-- ADD IMAGES DYNAMICALLY HERE-->
        <TextView

            android:id="@+id/list_header"
            android:layout_width="361dp"
            android:layout_height="341dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:background="#336699"

            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:color/transparent" />
    </LinearLayout>





    <Button
        android:id="@+id/SpamButton"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="hamClick"
        android:text="Not Phish"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="21dp" />

    <Button
        android:id="@+id/HamButton"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="spamClick"
        android:text="Phish"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="21dp" />
</android.support.constraint.ConstraintLayout>
